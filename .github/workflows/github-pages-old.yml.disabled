name: 🌐 Deploy AI Cosmic Garden to GitHub Pages

on:
  push:
    branches: [ main ]
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  deploy:
    runs-on: ubuntu-latest
    
    steps:
      - name: 🌟 Checkout Cosmic Garden
        uses: actions/checkout@v4

      - name: 🔧 Setup Pages with Force Enablement
        uses: actions/configure-pages@v4
        with:
          enablement: true
          
      - name: 📁 Create Pages-friendly structure
        run: |
          echo "🔍 Ensuring proper file structure for GitHub Pages..."
          ls -la
          echo "✅ Files ready for deployment"

      - name: 🚀 Upload Cosmic Artifacts
        uses: actions/upload-pages-artifact@v3
        with:
          path: '.'

      - name: 🌌 Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4

      - name: ✨ Cosmic Success Notification
        run: |
          echo "🎉 AI Cosmic Garden deployed successfully!"
          echo "🌐 Live at: ${{ steps.deployment.outputs.page_url }}"
          echo "🤖 All AI entities can now access the cosmic platform!"
          echo "📡 Sora & Codex conversation is now public!"
